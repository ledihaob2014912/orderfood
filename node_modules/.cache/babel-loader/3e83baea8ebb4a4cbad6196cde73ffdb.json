{"ast":null,"code":"import { mapState } from \"vuex\";\nexport default {\n  name: \"Menu\",\n  data() {\n    return {\n      foodObj: {\n        name: \"\",\n        category: \"\",\n        status: [],\n        price: \"\",\n        type: \"\"\n      },\n      showDropDown: false,\n      sendId: null,\n      perPage: 6,\n      pageNum: 0\n    };\n  },\n  computed: {\n    ...mapState([\"allFoods\"]),\n    filterFoods: function () {\n      return this.allFoods.filter(f => f.food_name.toLowerCase().match(this.foodObj.name.toLowerCase()) && (f.food_category.match(this.foodObj.category) || this.foodObj.category == \"all\" || this.foodObj.category == \"\") && this.evaluatePrice(f, this.foodObj.price) && f.food_type.toLowerCase().match(this.foodObj.type.toLowerCase()) && this.evaluateStatus(f, this.foodObj.status));\n    },\n    currentPageItems: function () {\n      return this.filterFoods.slice(this.pageNum * this.perPage, this.pageNum * this.perPage + this.perPage);\n    },\n    calculatePages: function () {\n      if (this.filterFoods.length % this.perPage != 0) {\n        return Math.floor(this.filterFoods.length / this.perPage) + 1;\n      } else {\n        return this.filterFoods.length / this.perPage;\n      }\n    }\n  },\n  methods: {\n    set(val) {\n      this.pageNum = val;\n    },\n    next() {\n      this.pageNum++;\n    },\n    previous() {\n      this.pageNum--;\n    },\n    evaluateStatus: function (food, statusArray) {\n      this.pageNum = 0;\n      if (statusArray.length != 0) {\n        if (this.checkSale(food, statusArray) && this.checkBest(food, statusArray) && this.checkNew(food, statusArray) && this.checkSeason(food, statusArray) && this.checkOnl(food, statusArray)) {\n          return food;\n        }\n      } else {\n        return food;\n      }\n    },\n    evaluatePrice: function (food, priceRange) {\n      this.pageNum = 0;\n      var cal = parseFloat(food.food_price) - parseFloat(food.food_discount);\n      if (priceRange == \"2,5\") {\n        if (2 <= cal && cal <= 5) {\n          return food;\n        }\n      } else if (priceRange == \"5,10\") {\n        if (5 <= cal && cal <= 10) {\n          return food;\n        }\n      } else if (priceRange == \"10,12\") {\n        if (10 <= cal && cal <= 12) {\n          return food;\n        }\n      } else if (priceRange == \"2\") {\n        if (cal <= 2) {\n          return food;\n        }\n      } else if (priceRange == \"12\") {\n        if (cal >= 12) {\n          return food;\n        }\n      } else if (priceRange == \"\") {\n        return food;\n      }\n    }\n  }\n};","map":{"version":3,"mappings":"AA+EA,SAASA,QAAO,QAAS,MAAM;AAC/B,eAAe;EACXC,IAAI,EAAE,MAAM;EAEZC,IAAIA,GAAG;IACH,OAAO;MACHC,OAAO,EAAE;QAAEF,IAAI,EAAE,EAAE;QAAEG,QAAQ,EAAE,EAAE;QAAEC,MAAM,EAAE,EAAE;QAAEC,KAAK,EAAE,EAAE;QAAEC,IAAI,EAAE;MAAG,CAAC;MACpEC,YAAY,EAAE,KAAK;MACnBC,MAAM,EAAE,IAAI;MACZC,OAAO,EAAE,CAAC;MACVC,OAAO,EAAE;IAEb,CAAC;EACL,CAAC;EAEDC,QAAQ,EAAE;IACN,GAAGZ,QAAQ,CAAC,CAAC,UAAU,CAAC,CAAC;IAEzBa,WAAW,EAAE,YAAY;MACrB,OAAO,IAAI,CAACC,QAAQ,CAACC,MAAM,CAAEC,CAAC,IAAKA,CAAC,CAACC,SAAS,CAACC,WAAW,CAAC,CAAC,CAACC,KAAK,CAAC,IAAI,CAAChB,OAAO,CAACF,IAAI,CAACiB,WAAW,CAAC,CAAC,MAC7FF,CAAC,CAACI,aAAa,CAACD,KAAK,CAAC,IAAI,CAAChB,OAAO,CAACC,QAAQ,KAAK,IAAI,CAACD,OAAO,CAACC,QAAO,IAAK,KAAI,IAAK,IAAI,CAACD,OAAO,CAACC,QAAO,IAAK,EAAE,KAC7G,IAAI,CAACiB,aAAa,CAACL,CAAC,EAAE,IAAI,CAACb,OAAO,CAACG,KAAK,CAAC,IAC1CU,CAAC,CAACM,SAAS,CAACJ,WAAW,CAAC,CAAC,CAACC,KAAK,CAAC,IAAI,CAAChB,OAAO,CAACI,IAAI,CAACW,WAAW,CAAC,CAAC,KAC9D,IAAI,CAACK,cAAc,CAACP,CAAC,EAAE,IAAI,CAACb,OAAO,CAACE,MAAM,CAAE,CAAC;IACtD,CAAC;IACDmB,gBAAgB,EAAE,YAAY;MAC1B,OAAO,IAAI,CAACX,WAAW,CAACY,KAAK,CAAC,IAAI,CAACd,OAAM,GAAI,IAAI,CAACD,OAAO,EAAE,IAAI,CAACC,OAAM,GAAI,IAAI,CAACD,OAAM,GAAI,IAAI,CAACA,OAAO,CAAC;IAC1G,CAAC;IACDgB,cAAc,EAAE,YAAY;MACxB,IAAI,IAAI,CAACb,WAAW,CAACc,MAAK,GAAI,IAAI,CAACjB,OAAM,IAAK,CAAC,EAAE;QAC7C,OAAOkB,IAAI,CAACC,KAAK,CAAE,IAAI,CAAChB,WAAW,CAACc,MAAM,GAAI,IAAI,CAACjB,OAAO,IAAI,CAAC;MACnE,OACK;QACD,OAAO,IAAI,CAACG